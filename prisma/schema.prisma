// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 権限管理用のEnum
enum Role {
  USER
  SALON_ADMIN
  SUPER_ADMIN
}

// Userモデル
model User {
  id            String    @id @default(cuid())
  username      String?   @unique
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  hashedPassword String?
  image         String?
  role          Role      @default(USER) // 権限

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // プロフィール情報
  title             String?
  bio               String?   @db.Text
  website           String?
  twitter           String?
  instagram         String?
  
  // 機能設定
  nfcCardId         String?   @unique
  directLinkEnabled Boolean   @default(false)
  directLinkUrl     String?

  // --- サロン連携 ---
  // ユーザーが所属する（顧客として紐づく）サロン
  salonId           String?
  salon             Salon?    @relation("SalonCustomers", fields: [salonId], references: [id])

  // このユーザーが管理者として所有するサロン（店舗管理者の場合）
  managedSalon      Salon?    @relation("SalonOwner")

  // リレーション
  accounts          Account[]
  sessions          Session[]
  profileViews      ProfileView[]
  favorites         Favorite[] @relation("FavoriteOwner")
  favoritedBy       Favorite[] @relation("FavoriteSelectedUser")
  followers         Follow[]   @relation("FollowerRelation")
  following         Follow[]   @relation("FollowingRelation")
}

// Salonモデル (加盟店)
model Salon {
  id            String    @id @default(cuid())
  name          String    // 店舗名
  slug          String    @unique // URL用ID (例: cyber-nail)
  salonCode     String?   @unique // [NEW] ユーザー登録時に入力するコード (例: 1234)
  
  // [NEW] 店舗情報表示用
  location      String?   // 地域・住所表示 (例: 東京都昭島市)
  mapUrl        String?   // Google Map等のURL
  websiteUrl    String?   // 店舗公式サイトURL
  logoUrl       String?   // 店舗アイコン/ロゴ画像
  
  // デザイン設定
  primaryColor  String    @default("#000000") 
  accentColor   String    @default("#FFD700")
  themeId       String?
  theme         Theme?    @relation(fields: [themeId], references: [id])

  // オーナー（店舗管理者）
  ownerId       String?   @unique
  owner         User?     @relation("SalonOwner", fields: [ownerId], references: [id])

  // 顧客リスト
  users         User[]    @relation("SalonCustomers")

  // [NEW] カード在庫管理
  nfcCards      NfcCard[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// [NEW] NfcCardモデル (在庫管理用)
model NfcCard {
  id        String   @id // カードの固有ID (nfcCardIdと同じ)
  
  // どのサロンに卸したか
  salonId   String
  salon     Salon    @relation(fields: [salonId], references: [id])
  
  // 状態管理 (在庫、使用中、無効など)
  isActive  Boolean  @default(true)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([salonId])
}

// Themeモデル (デザインプリセット)
model Theme {
  id            String    @id @default(cuid())
  name          String    
  className     String    
  salons        Salon[]
}

// Favoriteモデル
model Favorite {
  id             String    @id @default(cuid())
  ownerId        String    
  slotIndex      Int       
  selectedUserId String    
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  owner          User      @relation("FavoriteOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  selectedUser   User      @relation("FavoriteSelectedUser", fields: [selectedUserId], references: [id], onDelete: Restrict)

  @@unique([ownerId, slotIndex])
  @@index([selectedUserId])
}

// --- NextAuth用モデル (変更なし) ---
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}

model Follow {
  id          String    @id @default(cuid())
  followerId  String    
  followingId String    
  createdAt   DateTime  @default(now())
  follower    User      @relation("FollowingRelation", fields: [followerId], references: [id], onDelete: Cascade)
  following   User      @relation("FollowerRelation", fields: [followingId], references: [id], onDelete: Cascade)
  @@unique([followerId, followingId])
  @@index([followingId])
}

model ProfileView {
  id             String    @id @default(cuid())
  profileOwnerId String
  viewedAt       DateTime  @default(now())
  viewerIp       String?
  profileOwner   User      @relation(fields: [profileOwnerId], references: [id], onDelete: Cascade)
  @@index([profileOwnerId])
}